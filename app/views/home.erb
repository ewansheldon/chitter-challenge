
  <% if @current_user %>
  <form action="/" method="post">
    <label>
      <input type="text" name="peep" placeholder='send a message!' required>
    </label>
    <input type='submit' value='peep!'>
  </form>
  <% end %>
<ul id='peeps'>
  <% @peeps.each do |peep| %>
    <li>
      <%= peep.user %> wrote: <%= peep.peep %>
    </li>
  <% end %>
</ul>
